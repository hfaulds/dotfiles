#!/bin/bash

set -e

if [ ! -f "/usr/local/bin/brew" ]; then
  /usr/bin/ruby ./script/homebrew
fi

/usr/local/bin/brew bundle

git submodule init
git submodule update

pwd=$(pwd)

for f in $(find config -iname ".*" -d 1) ; do
	ff=$(basename $f)
	echo "link $pwd/config/$ff -> $HOME/$ff"
	ln -Fs "$pwd/config/$ff" "$HOME"
done
